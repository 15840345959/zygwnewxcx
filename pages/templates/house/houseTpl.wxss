/* pages/templates/house/houseTpl.wxss */

.house-font{
  font-size: 28rpx;
  color: #AAA;
  line-height: 60rpx;
}

.house-info {
  padding-left: 15rpx;
  float: left;
  width: 450rpx;
  position: relative;
}

.house-price {
  padding-right: 0rpx;
  float: right;
  position: relative;
}

.house-img-sml {
  width: 240rpx;
  height: 220rpx;
  border-radius: 3rpx;
}

.house {
  display: flex;
  flex-direction: row;
  /* padding: 10rpx 0rpx; */
  /* border-bottom: 1px rgba(255, 255, 255, 0.2) solid;   */
}

.house-title-font {
  font-size: 30rpx;
  color: #333;
}

.house-font-blue {
  /*font-family: .PingFang-SC-Regular;*/
  font-size: 22rpx;
  color: #6c0;
  font-weight: bold;
  width: 120rpx;
  text-align: center;
  background-color: #cfc;
}

.house-font-price {
  font-weight: bold;
  color: #e75110;
  /* letter-spacing: -0.68rpx; */
}

.house-font-red {
  font-size: 30rpx;
  color: red;
  letter-spacing: -0.68rpx;
}

.absolute {
  position: absolute;
}

.down-line {
  width: 100%;
  height: 2rpx;
  background: #f4f4f4;
}

.down-line-5 {
  width: 100%;
  height: 20rpx;
  background: #f4f4f4;
}